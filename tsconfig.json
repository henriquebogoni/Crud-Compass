{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es6"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "rootDir": "./",
    "typeRoots": [
      "./node_module/@types",
      "./src/@types"
    ],
    "types": [
      "@types/jest",
      "@types/node"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@business/*": ["./src/business/*"],
      "@controller/*": ["./src/controllers/*"],
      "@database/*": ["src/prismadb/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@models/*": ["./src/models/*"],
      "@routes/*": ["./src/routes/*"],
      "@utils/*": ["./src/utils/*"],
      "@validators/*": ["./src/validators/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@services/*": ["./src/services/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}